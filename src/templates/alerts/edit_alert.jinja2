{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Edit Alert</h1>
    </div>
    <div class="form-size">
        <form action="/" method="post">
            <div class="form-group">
                <label for="name">Alter/Item Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="{{ alert.item.name }}" disabled>
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="{{ alert.item.url }}" disabled>
            </div>
            <div class="form-group">
                <label for="price_limit">Alert limit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="100.0"
                       value="{{ alert.price_limit }}" aria-describedby="priceLimitBlock">
                <span id="priceLimitBlock" class="help-block">We'll send you an e-mail when the price reaches or goes under this.</span>
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
{% endblock %}